<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimaryBg"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/id_query_grade_fail_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_elevation"
        android:text="@string/query_grade_fail" />
    <com.loopeer.cardstack.CardStackView
        android:id="@+id/id_grade_fail_csv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="40px" />

</LinearLayout>
